{
    "version": 2,
    "builds": [
        {
            "src": "backend/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/index.js"
        },
        {
            "src": "/assets/(.*)",
            "dest": "frontend/assets/$1"
        },
        {
            "src": "/src/(.*)",
            "dest": "frontend/src/$1"
        },
        {
            "src": "/(.*)\\.(js|css|png|jpg|svg|ico)",
            "dest": "frontend/$1.$2"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/index.html"
        }
    ]
}